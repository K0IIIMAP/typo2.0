generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db" // This creates a SQLite database file named dev.db in your project directory
}

model Mode {
  id            Int      @id @default(autoincrement())
  title         String
  approximately Int
  description   String // Optional description field
  text          String // Optional text field to store additional data
  createdAt     DateTime @default(now())
}

model Challenge {
  id          Int      @id @default(autoincrement())
  title       String
  difficulty  String
  timeLimit   Int
  description String // Optional description field
  text        String
  createdAt   DateTime @default(now())
}

model User {
  id              String  @id @default(cuid())
  name            String?
  email           String  @unique
  hashedPassword  String
  profileImageUrl String?
}
